<section class="ad_login_section secondary">
    <!-- section css : margin ! -->
    <div class="container d-flex flex-wrap">
        <div class="container d-none d-lg-block col-lg-6 promotion-col">
            <h2 class="text-center">Check Out these Promotions !</h2>
            <div class="row">
                <div class="col-4 mt-5">
                    <div class="list-group" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list"
                            href="#list-home" role="tab" aria-controls="home">New Accounts</a>
                        <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list"
                            href="#list-profile" role="tab" aria-controls="profile">Comments</a>
                        <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list"
                            href="#list-messages" role="tab" aria-controls="messages">Media</a>
                        <a class="list-group-item list-group-item-action" id="list-settings-list" data-toggle="list"
                            href="#list-settings" role="tab" aria-controls="settings">Referrals</a>
                    </div>
                </div>
                <div class="col-8 mt-5">
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="list-home" role="tabpanel"
                            aria-labelledby="list-home-list">Create a new account to generate a discount code for
                            your first purchase !</div>
                        <div class="tab-pane fade" id="list-profile" role="tabpanel"
                            aria-labelledby="list-profile-list">Leave a comment on one of our products to generate a
                            discount code for your next purchase !</div>
                        <div class="tab-pane fade" id="list-messages" role="tabpanel"
                            aria-labelledby="list-messages-list">Send us a photo/video of you consuming one of our
                            products to generate a special discount code for your next purchase !</div>
                        <div class="tab-pane fade" id="list-settings" role="tabpanel"
                            aria-labelledby="list-settings-list">If you are a new customer, let us know the name of
                            an existing account holder who referred you, so that we can send them a special discount
                            code !</div>
                    </div>
                </div>
            </div>
        </div>
        {{!-- end of promotion section --}}
        <div class="container col-sm-12 col-md-6 login-col text-center">
            <h2 class="col text-center">Login Here</h2>
            <br>
            <form class="users_login">
                <div class="form-group text-center mr-auto ml-auto">
                    <label for="text_username">Email</label>
                    <input type="text" name='email' placeholder="Email">
                </div>
                <div class="form-group text-center mr-auto ml-auto">
                    <label for="user_InputPassword1">Password</label>
                    <input type="password" name="password" placeholder="Password">
                </div>
                <div id="row-submit">
                    <input type="submit" value="Submit" class="btn-lg btn-secondary"/>
                </div>
            </form>
            <div class="mt-3">
                <a href="/auth/facebook" class="btn-lg btn-primary btn-block" type="button">Login with Facebook<i class="fab fa-facebook"></i></a>
                <a href="/auth/google" class="btn-lg btn-primary btn-block" type="button">Login with Google <i class="fab fa-google"></i></a>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>

<script type='text/javascript'>
    $('.users_login').submit(function (event) {
        event.preventDefault();
        var email = event.target.email.value;
        var pw = event.target.password.value;
        if (email === '' || email.length < 1 || email.length > 50) {
            $("input:eq(0)").css("border", "red solid 2px");
            alert(`please input a valid email address of no more than 50 characters`)
        } else if (pw === '' || pw.length > 15) {
            $("input:eq(1)").css("border", "red solid 2px");
            alert(`please input a valid password of no more than 15 characters`)
        } else {
            alert(`thanks, you have successfully logged in`)
            $("input:eq(0)").css("border", "");
            $("input:eq(1)").css("border", "");
            $('.users_login')[0].reset();
        }
    });
</script>