<section class="secondary">
    <div class="container">
        <div id="remind__modal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content modal_warning">
                    <div class="modal-header d-flex flex-column">

                        <h4 class="modal-title d-inline-flex"><i class="my-auto fas fa-3x fa-beer">BEST BEER </i></h4>
                        <br>
                        <div class="col">
                            <p class="h3 text-bolder-light text-center">Friendly Reminder</p>
                        </div>
                    </div>
                    <div class="modal-body modal_text_warning">
                        <p class="text-danger text-bolder-lg text-left p-3">“Under the law of Hong Kong, intoxicating
                            liquor must
                            not be sold or supplied to a minor in the course of
                            business.”
                        </p>
                        <p class="text-danger text-bolder-lg text-left p-3">
                            This website contains alcoholic products and is only suitable
                            for those 18 years or older. Click Enter only if you are at least
                            18 years of age.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid ">

        <!-- end of btn-group -->
        <div class="col">
            <div id="beer_homepageCarousel" class="carousel slide " data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#beer_homepageCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#beer_homepageCarousel" data-slide-to="1"></li>
                    <li data-target="#beer_homepageCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block mx-auto carousel__images" style="width: 75%; height:auto"
                            src="asset/beer1.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block mx-auto carousel__images" style="width: 65%; height:auto"
                            src="asset/beer2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block mx-auto  carousel__images" style="width: 65%; height:auto"
                            src="asset/beer3.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#beer_homepageCarousel" role="button" data-slide="prev">
                    <span class=" arrow-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#beer_homepageCarousel" role="button" data-slide="next">
                    <span class=" arrow-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>
<!--  end of carousel div -->

<div class="content-section row secondary col-8 d-flex mx-auto" id="section1">
    {{#each beer}}
    <div class="col-sm-12 col-md-12 col-lg-4 d-inline-flex mb-3">
        <div class="card" style="width: 25rem;">
            <div class="card-header align-middle">
                <h5 class="card-title text-center h2">{{beer_name}}</h5>
            </div>

            <div class="row">
                <div class="col d-inline-flex">
                    <a href="/beer/{{id}}" class="a_home_product mx-auto"><img
                            class="card-img-top mx-auto d-block products__img" src="/{{thumbnail}}" alt="Card image cap"
                            style="width: 200px; "> </a>
                    {{!-- add animate on the img ** --}}

                </div>
            </div>

            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">330 ML</li>
                    <li class="list-group-item text-center">$ {{price}}</li>
                </ul>
                <div class="row justify-content-center">
                    <form class="form-inline">
                        <label class="mx-1 mr-2 text-center" for="inlineFormCustomSelectPref">Order
                            here</label>
                        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                            <option selected>Cans</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                    </form>
                </div>
            </div>
            <div class="card-footer text-center">
                <a href="/login">
                    <button type="btn" class="btn btn-primary my-1">Login to Buy</button>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
