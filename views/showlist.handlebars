<section class="secondary" id="mycart">
    <div id="basket_list">
        <div class="col-sm-12 col-md-4 col-lg-4 d-inline-flex justify-content-center">
            {{#each purchase}}
            <div class="card" style="width: 25rem;height: auto;">
                <div class="card-header bg-white border-0 d-flex justify-content-between">
                    <a class="btn" id="wish_btn1"><i class="far fa-2x fa-star "></i></a>
                    <a class="btn" id="wish_btn1"><i class="far fa-2x fa-times-circle "></i></a>
                </div>
                <div class="col d-inline-flex">
                    <a href="#" class="a_home_product mx-auto"><img class="card-img-top mx-auto d-block products__img"
                            src="../asset/product3.png" alt="Card image cap" style="width: 100px; "></a>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center h2">{{beer_name}}</h5>
                    <p class="card-text text-center h4">330 ML </p>
                    <br>
                    <p class="card-text text-center h4">$ {{total_price}} /Pack</p>


                    <div class="row justify-content-center"><small class="text-secondary">Each packs have 6
                            cans</small></div>
                    <br>
                    <p class="card-text text-center h4">You ordered 1 Pack</p>
                    <br>

                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<section>
    <div class="container" id="prmote_code__enter">
        <div class="col">
            <form>
                <div class="form-group">
                    <label for="promoteCode">Please Input Our Promote Code Here</label>
                    <input type="text" class="form-control" placeholder="e.g: nobeernolifex10">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>

<section id="confirm_div">
    <div class="container secondary">
        <div class="col-8 text-center">
            <div class="d-flex flex-column ">
                <div class="d-flex justify-content-between">
                    <p class="h4">Sub-total</p>
                    <p class="h4" id="#">HKD$ 150</p>
                </div>
                <div class="col mt-2" id="code_entered"></div>
                <div class="d-flex justify-content-between">
                    <p class="h4">Delivery</p>
                    <p class="h4" id="delivery_fee">HKD$ 100</p>
                </div>
                <small class="text-muted text-right">Free(If order over $ 500)</small>
                <br>
                <div class="d-flex justify-content-between">
                    <p class="h1 text-uppercase">Total</p>
                    <p class="h1"> HKD$
                    <p class="h1" id="total_$"></p>
                    </p>

                </div>
            </div>
        </div>
    </div>

</section>

    <div class="container pb-5"> <a href="/myCart_Delivery" class="text-white btn-lg btn-primary btn-block text-center rounded" type="button">Proceed to Delivery
            </a></div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    
