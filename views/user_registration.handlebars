<section class="secondary beer_each">
  <div class="col-8 offset-2">
    <form id="newUserRegistration" action="/register" method="POST">
      <div class="form-group row" style="font-size:24px;font-weight:700">
        New User Registration
      </div>
      <div class="form-group fName col-6">
        <label for="regist_firstName">First Name</label>
        <input type="text" name="firstName" class="form-control" id="regist_firstName" placeholder="First Name">
      </div>
      <div class="form-group lName col-6">
        <label for="inputLastName">Last Name</label>
        <input type="text" name="lastName" class="form-control" id="inputLastName" placeholder="Last Name">
      </div>
      <div class="form-group email col-6">
        <label for="inputEmail">Email address</label>
        <input type="text" name="email" class="form-control" id="inputEmail" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
          else.</small>
      </div>
      <div class="form-group pw col-6">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password">
      </div>
      <input type="submit" class="btn btn-primary btn-lg">
    </form>
  </div>
</section>

